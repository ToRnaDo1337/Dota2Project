<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.dota2.ui.login.LoginFragment"
        android:label="Dota2"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainMenu"
            app:destination="@id/mainMenu" />
    </fragment>
    <fragment
        android:id="@+id/mainMenu"
        android:name="com.example.dota2.MainMenu"
        android:label="MainMenu" >
        <action
            android:id="@+id/action_mainMenu_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainMenu_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.dota2.ui.Settings.SettingsActivity"
        android:label="SettingsFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.dota2.MainActivity"
        android:label="fragment_mako_question"
        tools:layout="@layout/fragment_mako_question" />
    <fragment
        android:id="@+id/aboutFragment2"
        android:name="com.example.dota2.ui.aboutdota.AboutFragment"
        android:label="AboutFragment"
        android:layout="@layout/fragment_about"/>
</navigation>